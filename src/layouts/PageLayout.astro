---
import Layout from './Layout.astro';

const { title, heroTitle, heroSubtitle } = Astro.props;
---

<Layout title={title}>
  <div class="bg-gradient-to-r from-blue-600 to-blue-800 text-white py-16 mb-8">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">{heroTitle}</h1>
      {heroSubtitle && <p class="text-xl md:text-2xl">{heroSubtitle}</p>}
    </div>
  </div>
  <div class="container mx-auto px-4 mb-12">
    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
      <div class="p-8">
        <slot />
      </div>
    </div>
  </div>
</Layout>